<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_Layout"
    >



    <LinearLayout

        android:id="@+id/entire_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    <LinearLayout

        android:id="@+id/ReceiverLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="40dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:thicknessRatio="1.9">

            <ImageView
                android:id="@+id/receiver_Image"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_people"
                />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:id="@+id/bubble_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/receiver_message"
           >

            <TextView
                android:id="@+id/ReceiverMessageContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="12"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@android:color/primary_text_light"
                />
        </LinearLayout>




    </LinearLayout>




    <LinearLayout
        android:id="@+id/SenderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:gravity="right"
        >



        <LinearLayout
            android:id="@+id/bubble_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/sender_message"
            >

            <TextView
                android:id="@+id/senderMessageContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="12"
                android:layout_gravity="center"

                android:text=""
                android:textColor="@android:color/primary_text_light"
                />

            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:elevation="12dp"
                android:id="@+id/view3"
                app:cardCornerRadius="40dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:thicknessRatio="1.9">

                <ImageView
                    android:id="@+id/sender_Image"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_people_red"
                    />
            </android.support.v7.widget.CardView>


    </LinearLayout>



    </LinearLayout>


</LinearLayout>